{% extends 'JCSf2TemplatesBundle::base.html.twig' %}


{% block styles %}  

{{ parent() }}

<style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }
        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }

    </style>

{% endblock %}

{% block body %}

    <div class="container">
{% if error %}
    <div>{{ error.message }}</div>
{% endif %}
    
    <form  class="form-signin" action="{{ path('jc_sf2_seguridad_login_check') }}" method="post">
        <h2 class="form-signin-heading">Please sign in</h2>
        
        <input class="input-block-level" placeholder="Usuario" type="text" id="username" name="_username" value="{{ last_username }}" />
        
        <input class="input-block-level" placeholder="Password" type="password" id="password" name="_password" />

    {#
        If you want to control the URL the user is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

        <button class="btn btn-large btn-primary" type="submit">login</button>
    

    </div> <!-- /container -->

{% endblock %}









    
